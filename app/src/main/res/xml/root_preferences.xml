<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory app:title="@string/messages_header">

        <Preference
            app:key="import"
            app:title="Import" />
        <Preference
            app:key="export"
            app:title="Export" />

        <ListPreference
            app:entries="@array/languages"
            app:entryValues="@array/languages"
            app:key="language"
            app:title="Language" />

        <ListPreference
            app:entries="@array/themes"
            app:entryValues="@array/themes"
            app:key="theme"
            android:defaultValue="1"
            app:title="Theme" />

        <ListPreference
            app:entries="@array/colors"
            app:entryValues="@array/colors"
            app:key="color"
            app:title="Color" />
    </PreferenceCategory>
</PreferenceScreen>