<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.studyswipe.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_add"
        android:name="com.example.studyswipe.ui.add.AddFragment"
        android:label="@string/title_add"
        tools:layout="@layout/fragment_add">
        <action
            android:id="@+id/action_navigation_add_to_createTopicFragment"
            app:destination="@id/createTopicFragment"
            app:popUpTo="@id/createTopicFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/createTopicFragment"
        android:name="com.example.studyswipe.ui.create.CreateTopicFragment"
        android:label="Create Topic"
        tools:layout="@layout/fragment_create_topic">
        <argument
            android:name="title"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/navigation_statistic"
        android:name="com.example.studyswipe.ui.statistics.StatisticFragment"
        android:label="@string/title_statistic"
        tools:layout="@layout/fragment_statistic" />
    <fragment
        android:id="@+id/navigation_setting"
        android:name="com.example.studyswipe.ui.settings.SettingFragment"
        android:label="@string/title_setting"
        tools:layout="@layout/fragment_setting" />
</navigation>